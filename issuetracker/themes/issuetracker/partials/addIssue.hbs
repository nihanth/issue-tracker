<div class="span12"><h3>{{title}}</h3></div>

<table >
        <tr><td width="5%">Project</td><td>:</td><td valign="middle"> <select id="projectId">
                                                                          {{#each project}}
                                                                              <option value="{{id}}">{{name}}</option>
                                                                          {{/each}}
                                                                          </select>

        </td></tr>

	    <tr><td width="5%">Key</td><td>:</td><td valign="middle"><input type='text' id='key' name="key" placeholder="Unique Key" maxlength="40"/></td></tr>
	    <tr><td width="13%">Summary</td><td>:</td><td valign="middle"><input type='text' id='summary' name="summary" placeholder="Project Summary" maxlength="40"/></td></tr>
	    <tr><td width="13%">Description</td><td>:</td><td valign="middle"><input type='text' id='description' name="description" placeholder="Project Description" maxlength="40"/></td></tr>

	    <tr><td width="5%">Type</td><td>:</td><td valign="middle">
	        <select id='type' >
              <option value="BUG">BUG</option>
              <option value="QUERY">QUERY</option>
              <option value="FEATURE">FEATURE</option>
            </select>

	    </td></tr>
	    <tr><td width="5%">Priority</td><td>:</td><td valign="middle">
	        <select id="priority">
	        <option value="HIGHEST">HIGHEST</option>
             <option value="HIGH">HIGH</option>
             <option value="NORMAL">NORMAL</option>
             <option value="LOW">LOW</option>
           </select>

        <tr><td width="5%">owner</td><td>:</td><td valign="middle"><input type='text' id='owner' name="owner" placeholder="Owner" maxlength="40"/></td></tr>
        <tr><td width="5%">status</td><td>:</td> <td valign="middle">
            <select id="status">
               <option value="OPEN">OPEN</option>
               <option value="RESOLVED">RESOLVED</option>
               <option value="INPROGRESS">INPROGRESS</option>
             </select>
        <tr><td width="10%">assignee</td><td>:</td><td valign="middle"><input type='text' id='assignee' name="assignee" placeholder="Assignee" maxlength="40"/></td></tr>
        <tr><td width="5%">version</td><td>:</td><td valign="middle">
        <select id='version'></select>
        <tr><td width="5%">SEVERITY</td><td>:</td><td valign="middle">
            <select id="severity">
               <option value="BLOCKER">BLOCKER</option>
               <option value="CRITICAL">CRITICAL</option>
               <option value="TRIVIAL">TRIVIAL</option>
               <option value="MINOR">MINOR</option>

             </select>
</table>
<input type="button" value="ADD Issue" id="saveMe">

 <script src="http://static.scripting.com/github/bootstrap2/js/jquery.js"></script>

<script type="text/javascript">

            $(document).ready(function() {

                $('#version').find('option').remove();

                            $.ajax({
                                type: 'GET',
                                url: "getProjectVersion.jag",
                                data: {
                                    pid:$("#projectId").attr('value')
                                },
                                success: function(result){
                                   $.each(result.version, function(i, obj) {
                                       $('#version')
                                           .append($("<option></option>")
                                               .attr("value",obj.projectVersionId)
                                               .text(obj.projectVersion));

                                    });
                                },
                                dataType: 'json',
                                async:false
                            });

            });
</script>



