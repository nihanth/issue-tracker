<section class="content push_top_40">
    <div class="form-container">
        <fieldset>
            <div class="input_row">
                <label for="projectId" ><strong>Project</strong> <em>*</em></label>
                <select id="projectId" class="select_list">
                {{#each project}}
                  <option value="{{id}}">{{name}}</option>
                {{/each}}
                </select>

            </div>
            <div class="input_row">
                <label for="summary" ><strong>Summary</strong> <em>*</em></label>
                <input type='text' id='summary' name="summary" placeholder="Project Summary" maxlength="40" class="half required"/>
            </div>


            <div class="input_row">
                <label for="description" >Description</label>
                <textarea name='description' id='description' rows="5" cols="10" class="half" maxlength="250"></textarea>
            </div>


            <div class="input_row">
                <label for="type" ><strong>Type</strong> <em>*</em></label>
                <select id='type' class="select_list">
                  <option value="BUG">Bug</option>
                  <option value="QUERY">Query</option>
                  <option value="FEATURE">Feature</option>
                </select>
            </div>

            <div class="input_row">
                <label for="priority" ><strong>Priority</strong> <em>*</em></label>
                <select id="priority" class="select_list">
                <option value="HIGHEST">Highest</option>
                 <option value="HIGH">High</option>
                 <option value="NORMAL">Normal</option>
                 <option value="LOW">Low</option>
               </select>
            </div>

            <div class="input_row">
                <label for="status" ><strong>Status</strong> <em>*</em></label>
                <select id="status" class="select_list">
                   <option value="OPEN">Open</option>
                   <option value="RESOLVED">Resolved</option>
                   <option value="INPROGRESS">In Progress</option>
                 </select>
            </div>

            <div class="input_row">
                <label for="assignee" ><strong>Assignee</strong> <em>*</em></label>
               <input type='text' id='assignee' name="assignee" placeholder="Assignee" maxlength="40" class="half required"/>
            </div>


            <div class="input_row">
                <label for="version" ><strong>Version</strong> <em>*</em></label>
               <select id='version' class="select_list"></select>

            </div>



            <div class="input_row">
                <label for="severity" ><strong>Severity</strong> <em>*</em></label>
                <select id="severity" class="select_list">
                   <option value="BLOCKER">Blocker</option>
                   <option value="CRITICAL">Critical</option>
                   <option value="TRIVIAL">Trivial</option>
                   <option value="MINOR">Minor</option>
                 </select>
            </div>

        </fieldset>

        <div class="buttonrow">
            <input type="button" value="Add Issue" class="btn main" id='saveMe' />

            <a href="#" onclick="location.href='index.jag?'" >Cancel</a>
        </div>
    <input type="hidden" name="userName"  id="userName" value='<%= session.get("LOGGED_IN_USER") %>'/>

</div><!-- /form-container -->



<script src="http://static.scripting.com/github/bootstrap2/js/jquery.js"></script>

<script type="text/javascript">

            $(document).ready(function() {

                $('#version').find('option').remove();

                            $.ajax({
                                type: 'GET',
                                url: "getProjectVersion.jag",
                                data: {
                                    pid:$("#projectId").attr('value')
                                },
                                success: function(result){
                                   $.each(result.version, function(i, obj) {
                                       $('#version')
                                           .append($("<option></option>")
                                               .attr("value",obj.projectVersionId)
                                               .text(obj.projectVersion));

                                    });
                                },
                                dataType: 'json',
                                async:false
                            });

            });
</script>



